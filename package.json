{
	"name": "dear-diary",
	"displayName": "dear-diary",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.69.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:new-snapshots",
		"onView:snapshots",
		"onView:files",
		"onView:commmand-line-scripts",
		"onView:dependencies",
		"onView:comment"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "dear-diary.new-code-snapshot",
				"title": "New Code Snapshot",
				"category": "Dear Diary"
			},
			{
				"command": "dear-diary.refreshSnapshots",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "dear-diary.newPhase",
				"title": "Add new Phase",
				"icon": "$(add)"
			},
			{
				"command": "dear-diary.comment",
				"title": "Add a comment",
				"icon": "$(comment)"
			},
			{
				"command": "dear-diary.newComment",
				"title": "Create comment",
				"enablement": "!commentIsEmpty"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "dear-diary",
					"title": "Dear Diary",
					"icon": "$(notebook)"
				}
			],
			"panel": [
				{
					"id": "comment",
					"title": "Comment",
					"icon": "$(comment)"
				}
			]
		},
		"views": {
			"dear-diary": [
				{
					"type": "webview",
					"id": "new-snapshots",
					"name": "New Diary",
					"contextualTitle": "New Diary"
				},
				{
					"id": "snapshots",
					"name": "Diaries"
				},
				{
					"id": "files",
					"name": "Files"
				},
				{
					"id": "command-line-scripts",
					"name": "Command Line Scripts"
				},
				{
					"id": "dependencies",
					"name": "Dependencies"
				}
			],
			"comment": [
				{
					"type": "webview",
					"id": "comment",
					"name": ""
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "dear-diary.refreshSnapshots",
					"when": "view == snapshots",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "dear-diary.newPhase",
					"when": "view == snapshots && viewItem == snapshot",
					"group": "inline"
				},
				{
					"command": "dear-diary.comment",
					"when": "view == snapshots && viewItem == phase",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.69.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"eslint": "^8.18.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"typescript": "^4.7.4",
		"@vscode/test-electron": "^2.1.5"
	}
}
